    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (email + password \u2192 set {{jwt}})",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', ()=> pm.response.to.have.status(200));",
                  "const js = pm.response.json();",
                  "pm.expect(js.token || js.access_token).to.exist;",
                  "pm.collectionVariables.set('jwt', js.token || js.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login"
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            }
          }
        }
      ]
    },
